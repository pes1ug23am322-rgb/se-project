{
  "name": "se-project",
  "version": "1.0.0",
  "description": "Blog to PDF Converter - P42",
  "main": "src/app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/app.js",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "coverage:check": "jest --coverage --runInBand",
    "lint": "eslint src/ --max-warnings=10 || exit 0",
    "security": "npm audit --audit-level=high --json > security-report.json || exit 0",
    "ci": "npm run test:coverage && npm run lint && npm run security"
  },
  "dependencies": {
    "express": "^4.18.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "supertest": "^6.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "resetMocks": true,
    "restoreMocks": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  }
}




